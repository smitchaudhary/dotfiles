{
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false,
    },
  },
  "edit_predictions": {
    "provider": "mercury",
    "mode": "subtle",
    "enabled_in_text_threads": false,
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": false,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "create_directory": true,
        },
        "enable_all_context_servers": true,
        "context_servers": {},
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "batch_tool": false,
          "diagnostics": false,
          "fetch": true,
          "list_directory": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "terminal": false,
        },
        "enable_all_context_servers": false,
        "context_servers": {},
      },
    },
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking",
    },
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true,
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "dark": "Ayu Dark",
    "light": "Gruvbox Light Hard",
  },
  "vim_mode": true,
  "relative_line_numbers": "wrapped",
  "ui_font_family": "IBM Plex Sans",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono Nerd Font",
  "auto_update": true,
  "confirm_quit": true,
  "remove_trailing_whitespace_on_save": true,
  "scrollbar": {
    "git_diff": true,
    "selected_text": true,
    "selected_symbol": true,
    "show": "auto",
  },
  "terminal": {
    "blinking": "on",
    "font_family": "Hack Nerd Font Mono",
    "font_size": 14,
  },
  "wrap_guides": [80, 88, 100],
  "tabs": {
    "git_status": true,
    "activate_on_close": "left_neighbour",
    "file_icons": true,
  },
  "icon_theme": "Modern Icons (Light)",
  "languages": {
    "Python": {
      "enable_language_server": true,
      "language_servers": ["!basedpyright", "ruff", "ty"],
      "format_on_save": "on",
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length",
    },
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 500,
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
    },
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "git_status": true,
  },
  "collaboration_panel": {
    "button": false,
  },
  "notification_panel": {
    "button": false,
  },
  "seed_search_query_from_cursor": "always",
  "auto_signature_help": true,
  "title_bar": {
    "show_branch_icon": true,
    "show_user_picture": false,
    "show_project_items": true,
  },
  "on_last_window_closed": "quit_app",
  "search": {
    "button": false,
  },
  "colorize_brackets": true,
}
